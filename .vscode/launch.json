{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "Python Debugger: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal", // 使用集成终端
      "cwd": "${workspaceFolder}", // 确保当前工作目录是项目的根目录
      "env": {
        "PYTHONPATH": "${workspaceFolder}" // 可选：设置环境变量
      },
      "stopOnEntry": false, // 可选：是否在程序入口处暂停
      "justMyCode": true // 可选：只调试用户编写的代码（不包括库）
    }
  ]
}